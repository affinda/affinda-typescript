{
	"name": "@microsoft/tsdoc",
	"version": "0.12.19",
	"description": "A parser for the TypeScript doc comment syntax",
	"keywords": [
		"TypeScript",
		"documentation",
		"doc",
		"comments",
		"JSDoc",
		"parser",
		"standard"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/microsoft/tsdoc"
	},
	"homepage": "https://github.com/microsoft/tsdoc",
	"main": "lib/index.js",
	"typings": "lib/index.d.ts",
	"license": "MIT",
	"dependencies": {},
	"devDependencies": {
		"@rushstack/eslint-config": "0.4.0",
		"@types/jest": "24.0.16",
		"eslint": "^6.0.0",
		"jest": "~24.8.0",
		"prettier": "~1.18.2",
		"rimraf": "~2.6.3",
		"ts-jest": "~24.0.2",
		"typescript": "~3.5.3"
	},
	"scripts": {
		"build": "node ./build.js",
		"test": "jest",
		"watch": "jest --watch",
		"lint": "eslint -f unix \"src/**/*.{ts,tsx}\""
	},
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testMatch": [
			"<rootDir>/src/**/*.test.ts"
		]
	}
}
